<Window
    x:Class="WPF_AnimationDemo.DispatcherTimerDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_AnimationDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DispatcherTimerDemo"
    Width="300"
    Height="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Rectangle
            x:Name="rectangle"
            Grid.Row="0"
            Width="30"
            Height="100"
            Fill="Blue" />

        <Button
            Grid.Row="1"
            Width="100"
            Height="30"
            Click="Button_Click"
            Content="开始动画" />
    </Grid>
</Window>
